{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 10,
  "ignoreTests": false,
  "dependencyDashboard": true,
  "npm": {
    "stabilityDays": 3
  },
  "packageRules": [
    {
      "enabled": false,
      "matchUpdateTypes": [
        "major"
      ],
      "prPriority": -2
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "prPriority": 2
    }
  ]
}
